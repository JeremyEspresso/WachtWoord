<tr class="border-b border-gray-700 @((i % 2 == 0) ? "bg-neutral-300" : "bg-neutral-200")">
    <th class='py-4 px-6 font-medium whitespace-nowrap'>@entry.Id</th>
    <td>@entry.Title</td>
    <td>@entry.Username</td>
    <td>@entry.URL</td>
    <td>
        <button class="text-white focus:outline-none focus:ring-4 focus:ring-gray-300 rounded-lg font-medium text-sm px-5 py-2.5 bg-gray-800 hover:bg-gray-700 focus:ring-gray-700 border-gray-700">
            Copy
        </button>
    </td>
    <td>
        <button class="text-white focus:outline-none focus:ring-4 focus:ring-gray-300 rounded-lg font-medium text-sm px-5 py-2.5 bg-gray-800 hover:bg-gray-700 focus:ring-gray-700 border-gray-700">
            Edit
        </button>
    </td>
    <td>
        <button class="text-white focus:outline-none focus:ring-4 focus:ring-gray-300 rounded-lg font-medium text-sm px-5 py-2.5 bg-gray-800 hover:bg-gray-700 focus:ring-gray-700 border-gray-700">
            Delete
        </button>
    </td>
</tr>

@code {
    [Parameter]
    public Entry entry { get; set; }
    [Parameter]
    public int i { get; set; }
}

