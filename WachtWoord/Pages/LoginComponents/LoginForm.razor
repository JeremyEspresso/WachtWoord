@inject NavigationManager NavigationManager

<div class="font-sans w-full">
    <div class="grid h-screen place-items-center">
        <div class="items-center w-1/3">
            <form class="bg-zinc-100 shadow-md rounded-md px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Master Password
                    </label>
                    <input @bind=@Password @oninput="@((e) => {Password=(string)e.Value;})" class="@(IncorrectPassword && String.IsNullOrEmpty(Password) ? "border-red-500" : "border-zinc-400") shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="********">
                    @if (IncorrectPassword && String.IsNullOrEmpty(Password))
                    {
                        <p class="text-red-500 text-md">Incorrect password.</p>
                    } else {
                        <p class="text-zinc-500 text-sm">Enter your master password to continue.</p>
                    }
                </div>
                <div class="flex items-center justify-between">
                    <button @onclick="OnLoginClick" class="bg-zinc-500 hover:bg-zinc-600 text-white focus:outline-zinc-800 font-bold py-2 px-4 rounded focus:shadow-outline" type="button">
                        Sign In
                    </button>
                    <a @onclick="OnCancelClick" tabindex="-1" class="inline-block align-baseline font-bold text-sm text-zinc-600 hover:text-black cursor-pointer">
                        Cancel
                    </a>
                </div>
            </form>
            <p class="text-center text-gray-500 text-xs">
                WachtWoord
            </p>
        </div>
    </div>
</div>


@code {
    private string Password = string.Empty;
    private bool IncorrectPassword = false;
    
    private void OnLoginClick()
    {
        if (DatabaseService.Login(Password))
        {
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            IncorrectPassword = true;
            System.Media.SystemSounds.Asterisk.Play();
            Password = string.Empty;
        }
    }

    private void OnCancelClick()
    {
        Application.Exit();
    }
}
