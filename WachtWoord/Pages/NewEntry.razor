@page "/newentry"
@using WachtWoord.SQLite
@inject NavigationManager NavigationManager

<form>
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" @bind=@Title @oninput="@((e) => {Title=(string)e.Value;})" id="Title">
    </div>
    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" class="form-control" @bind=@Username @oninput="@((e) => {Username=(string)e.Value;})" id="Username">
    </div>
    <div class="form-group">
        <label for="Url">URL</label>
        <input type="url" class="form-control" @bind=@Url @oninput="@((e) => {Url=(string)e.Value;})" id="Url">
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" @bind=@Password @oninput="@((e) => {Password=(string)e.Value;})" id="Password">
    </div>
    <div class="form-group">
        <label for="Notes">Notes</label>
        <textarea class="form-control" id="Notes" @bind=@Notes @oninput="@((e) => {Title=(string)e.Value;})" rows="4"></textarea>
    </div>
</form>

<div class="mt-2">
    <button class="btn btn-primary" type="submit" @onclick="SubmitOnClick">Ok</button>
    <button class="btn btn-primary" type="submit" @onclick="CancelOnClick">Cancel</button>
</div>

@code {
    private string Title { get; set; }
    private string Username{ get; set; }
    private string Url { get; set; }
    private string Password { get; set; }
    private string Notes { get; set; }

    void CancelOnClick(){
        NavigationManager.NavigateTo("/");
    }

    void SubmitOnClick(){
        NavigationManager.NavigateTo("/");
    }

}


