@using WachtWoord.Models.Services

@foreach(Entry entry in allEntries)
    {
        <EntryRow entry="@entry" OnEntrySelected="SelectedEntryUpdate" isSelected="@(selectedEntry == entry)" />
    }

@code {
    [Parameter]
    public List<Entry> allEntries { get; set; }
    private Entry? selectedEntry;
    
    private void SelectedEntryUpdate(Entry entry){
        if (entry == selectedEntry)
        {
            selectedEntry = null;
        }
        else
        {
            selectedEntry = entry;
        }
    }
}

