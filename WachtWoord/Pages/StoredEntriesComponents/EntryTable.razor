<div class="overflow-y-scroll overflow-x-hidden h-5/6">
    <table class="w-screen font-sans">
        <thead class="h-8 bg-gray-200 text-zinc-800 border-b border-solid border-gray-300 text-xs uppercase whitespace-nowrap font-semibold text-left sticky top-0">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Username</th>
                <th>URL</th>
                <th>Last Modified</th>
            </tr>
        </thead>
        <tbody>
            
            @if(allEntries.Count != 0){
                <EntryLoop allEntries="@allEntries"/>
            } else {
                <tr>
                    <td>No entries found</td>
                </tr>
            }
                
            
            
        </tbody>
    </table>
</div>


@code{
    [Parameter]
    public List<Entry> allEntries { get; set; }
}