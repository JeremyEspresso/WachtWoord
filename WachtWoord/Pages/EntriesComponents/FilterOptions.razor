<input class="appearance-none border rounded py-1 px-2 text-gray-700 mb-3 leading-tight focus:outline-blue-200" type="text"
       @oninput="@((args) => SearchQueryUpdate(args, (string)args.Value))"
       placeholder="Search" 
/>

@code{
    [Parameter]
    public EventCallback<string> OnSearchChange { get; set; }

    private async Task SearchQueryUpdate(ChangeEventArgs e, string value)
    {
        await OnSearchChange.InvokeAsync(value);
    }
}